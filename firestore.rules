rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- ADMIN-ONLY EBOOKS ---------- */
    match /ebooks/{ebookId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.admin == true;
    }

    /* ---------- USER PROFILES ---------- */
    match /users/{userId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }
  }
}
